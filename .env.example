# MongoDB Configuration (Backend)
MONGO_URI=mongodb://localhost:27017/attendance-employee-management

# API Configuration
VITE_API_URL=http://localhost:5000/api

# Google Maps API Key (required for location tracking) - put your real key in a local .env
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# JWT Configuration
VITE_JWT_SECRET=your_jwt_secret_here

# Email Configuration (for notifications)
VITE_EMAIL_SERVICE=your_email_service
VITE_EMAIL_FROM=noreply@company.com

# App Configuration
VITE_APP_NAME=Employee Management System
VITE_APP_VERSION=1.0.0

# Development/Production
VITE_NODE_ENV=development

